<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <%- include ('_nav.ejs') %>

    <div
      class="mt-10 max-w-[1200px] w-full h-full mx-auto p-2 flex items-center flex-col gap-8">
      <div class="flex justify-center flex-col items-center">
        <h2 class="text-5xl text-center font-semibold">Account Manager</h2>
        <p class="mt-3 text-xl font-medium text-gray-400">
          as a admin you are free!
        </p>
      </div>

      <div class="cards-wrapper grid grid-cols-3 gap-6 w-full">
        <!-- Loop through the 'data' array and generate card elements -->
        <!-- Replace the dynamic values with actual data -->
        <!-- Example card element -->
        <% trip.forEach(el => { %>
        <div
          class="card shadow-md rounded-xl overflow-hidden w-full h-[450px] flex flex-col items-center relative">
          <div class="flex-[2] w-full relative">
            <img
              class="object-cover h-[260px] w-full"
              src="<%=el.image %>"
              alt="ok" />
          </div>
          <% el.Destinations.forEach(el=> { %>

          <div
            class="absolute top-4 right-4 bg-red-500 text-white p-2 rounded-full">
            <%= el.name %>
          </div>
          <% }) %>

          <div
            class="flex-[1] p-4 w-full flex flex-col gap-4 items-center justify-center bg-white">
            <div class="w-full flex items-center justify-between">
              <h2 class="text-2xl font-semibold"><%=el.name%></h2>
              <div class="flex items-center gap-2 text-2xl font-medium">
                <!-- <span>
                      <AiTwotoneStar size="28" color="#ffb329" />
                    </span> -->
              </div>
            </div>
            <div class="title text-xl font-medium text-gray-400">
              <%= el.description %>
            </div>
            <div class="w-full flex items-center justify-between">
              <h2 class="text-3xl font-medium">$<%= el.price %></h2>
              <a href="/admin/manage/<%=el.id%>/delete">
                <button
                  class="bg-gradient-to-r from-red-300 via-red-500 to-red-600 hover:bg-gradient-to-br p-3 px-6 rounded-3xl font-semibold cursor-pointer text-white">
                  Delete
                </button>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
        <!-- End of example card element -->
      </div>
    </div>
    <%- include ('_footer.ejs') %>
  </body>
</html>
